<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grades</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Grades</h1>
    <form id="fetch-form">
        <input type="text" id="gradeId" placeholder="Enter Grade ID" required>
        <button type="submit">Fetch Grade</button>
    </form>
    <div id="result">
        <p>ID: <span id="resultId">undefined</span></p>
        <p>Name: <span id="resultName">undefined</span></p>
        <p>Score: <span id="resultScore">undefined</span></p>
    </div>
    <script>
        document.getElementById('fetch-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const gradeId = document.getElementById('gradeId').value;
            const response = await fetch(`/api/grades/${gradeId}`);
            const data = await response.json();
            document.getElementById('resultId').innerText = data._id || 'undefined';
            document.getElementById('resultName').innerText = data.name || 'undefined';
            document.getElementById('resultScore').innerText = data.score || 'undefined';
        });
    </script>
</body>
</html>
